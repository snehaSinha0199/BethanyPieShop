@model IEnumerable<TeamWork.Models.Student>
@using TeamWork.ViewModel;


<html>
    <head>
        
    </head>
    <body>
        <table class="table table-striped table-dark">
          <thead>
            <tr>
              <th scope="col">First Name</th>
              <th scope="col">Last Name</th>
              <th scope="col">Email</th>
              <th scope="col">Age</th>
              <th scope="col">Gender</th>
              <th scope="col">Team Name</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
            <tbody>
            @foreach(var student in Model)
            {
                <tr>
                    <td><a asp-controller="Student" asp-action="Details" asp-route-id2="@student.StudentID">@student.FirstName</a></td>
                    <td>@student.LastName</td>
                     <td>@student.EmailId </td>
                    <td>@student.Age </td>
                    <td>@student.Gender </td>
                    <td>@student.TeamName</td>
                     <td><a asp-controller="Student" asp-action="Delete" asp-route-id="@student.StudentID">Remove</a></td>
                    
                </tr>                  

            }  
            </tbody>
        </table>
        <a asp-action="Create">Create</a><br />

        <b></b>
    </body>
</html>


